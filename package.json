{
  "name": "hatoff",
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently \"npm run start:app\" \"npm run gamedata:watch\"",
    "start:app": "ng serve --open --port 9866",
    "lint": "ng lint && npm run gamedata:art:validate",
    "build:versioninfo": "ts-node scripts/build-versioninfo",
    "build": "npm run build:versioninfo && npm run gamedata:build && npm run gamedata:art:spritesheets && ng build --configuration production",
    "gamedata:watch": "ts-node scripts/gamedata-watch",
    "gamedata:build": "ts-node scripts/gamedata-build",
    "gamedata:art:validate": "ts-node scripts/gamedata-art-validate",
    "gamedata:art:spritesheets": "ts-node scripts/gamedata-art-spritesheets",
    "bump:major": "npm version major -m \"chore(release): Major %s\"",
    "bump:minor": "npm version minor -m \"chore(release): Minor %s\"",
    "bump:patch": "npm version patch -m \"chore(release): Patch %s\"",
    "util:changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "util:changelog:generate:current": "conventional-changelog -p angular -o CHANGELOG-current.md -r 2",
    "util:changelog:commit": "git commit CHANGELOG.md CHANGELOG-current.md -m \"Update changelog\" || true",
    "util:dirtycheck": "ts-node utils/util-dirtycheck",
    "util:version:reversion": "ts-node utils/util-postversion.reversion",
    "preversion": "npm run util:dirtycheck && npm run lint && npm run build",
    "version": "npm run util:changelog:generate && npm run util:changelog:generate:current && npm run util:changelog:commit && npm run util:version:reversion && npm run push",
    "push": "git push && git push --tags",
    "postinstall": "npm run gamedata:art:spritesheets"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@ng-icons/core": "^29.6.1",
    "@ng-icons/game-icons": "^29.9.0",
    "@ng-icons/heroicons": "^29.6.1",
    "@ng-icons/tabler-icons": "^29.8.0",
    "@ngneat/helipopper": "^9.2.1",
    "@ngxpert/hot-toast": "^3.0.2",
    "@sweetalert2/ngx-sweetalert2": "^12.4.0",
    "@sweetalert2/theme-dark": "^5.0.18",
    "colord": "^2.9.3",
    "fantastical": "^2.0.1",
    "lodash": "^4.17.21",
    "ngx-webstorage": "^18.0.0",
    "rxjs": "~7.8.0",
    "seedrandom": "^3.0.5",
    "sweetalert2": "^11.6.13",
    "tslib": "^2.3.0",
    "uuid": "^11.0.2",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular-eslint/builder": "18.4.0",
    "@angular-eslint/eslint-plugin": "18.4.0",
    "@angular-eslint/eslint-plugin-template": "18.4.0",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "18.4.0",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.13",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "daisyui": "^4.12.14",
    "eslint": "8.57.0",
    "fs-extra": "^11.2.0",
    "git-describe": "^4.1.1",
    "js-yaml": "^4.1.0",
    "postcss": "^8.4.47",
    "recursive-readdir": "^2.2.3",
    "spritesmith": "^3.5.1",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2"
  }
}
